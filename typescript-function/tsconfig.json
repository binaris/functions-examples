{
  "version": "2.4.2",
  "compilerOptions": {
      "lib": [
        "es2017",
        "esnext.asynciterable"
      ],
      "target": "es2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "outDir": "./dist"
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
